<h1> Hire New Employee </h1>

<% if flash[:messages] %>
    <%=flash[:messages]%>
<%end%>


<%= form_for @employee do |f| %>
First Name: <%= f.text_field :first_name %>
<br>Last Name: <%= f.text_field :last_name %>
<br>Alias: <%= f.text_field :alias %>
<br>Title: <%= f.text_field :title %>
<br>Office: <%= f.text_field :office %>
<br>Dog: <%= f.collection_select :dog_id, Dog.all, :id, :name %>
<br>Img URL: <%= f.text_field :img_url %>
<%= f.submit value="HIRE" %>
<%end%>